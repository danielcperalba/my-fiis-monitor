<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MOFM</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MOFM</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Carteira</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Bolsa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Calculadora</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Fundos</a>
                        </li>
                    </ul>
                </div>

                <div class="dropdown text-end">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                        <img src="https://github.com/danielcperalba.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right small" style="">
                        <li><a class="dropdown-item" href="#">Perfil</a></li>
                        <li><a class="dropdown-item" href="#">Configurações</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Desconectar</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom shadow-sm mb-2">
            <div class="container-fluid">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                        <div class="flex-column w-100 align-items-center justify-content-center  list-group-item-action text-light">
                            <small>USD</small>
                            <small>R$5,67</small>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MOFM - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
